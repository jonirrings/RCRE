{
    "title": "权限查看",
    "body": [
        {
            "type": "row",
            "children": [
                {
                    "type": "form",
                    "model": "listQuery",
                    "colSpan": 6,
                    "rcre.name": "",
                    "data": {
                    },
                    "controls": [
                        {
                            "type": "row",
                            "colSpan": 12,
                            "children": [
                                {
                                    "type": "input",
                                    "name": "table_name",
                                    "label": "表名称"
                                },
                                {
                                    "type": "select",
                                    "name": "status",
                                    "label": "状态",
                                    "options": [
                                        {
                                            "key": "待审批",
                                            "value": "0"
                                        },
                                        {
                                            "key": "审批中",
                                            "value": "1"
                                        },
                                        {
                                            "key": "已审批",
                                            "value": "2"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "button",
                            "text": "查询",
                            "trigger": [
                                {
                                    "eventType": "click",
                                    "target": "authList",
                                    "ship": {
                                        "table_name": "$data.table_name",
                                        "status": "$data.status"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "container",
            "model": "authList",
            "data": {
                "option_desc": "$response.option_desc",
                "head": "$response.head",
                "body": "$response.body",
                "table_name": ""
            },
            "initialLoad": {
                "url": "http://cp01-ebg-nativeads-50.cp01.baidu.com:8088/udwmeta/userapproval/userapprovalinfo?applicant=lishuai15",
                "method": "GET",
                "data": {
                    "request_flag": "list",
                    "applicant": "$global.username",
                    "table_name": "$data.table_name",
                    "approval_status": "$data.status"
                }
            },
            "children": [
                {
                    "type": "text",
                    "text": "$parent.option_desc",
                    "style": {
                        "fontSize": 16,
                        "margin": "10px 0",
                        "display": "block"
                    }
                },
                {
                    "type": "row",
                    "children": [
                        {
                            "type": "table",
                            "columns": "$data.head",
                            "dataSource": "$data.body",
                            "columnsMapping": {
                                "dataIndex": "$iterator.key",
                                "title": "$iterator.value",
                                "key": "$iterator.key"
                            },
                            "dataSourceMapping": {
                                "key": "$iterator.field_index"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}