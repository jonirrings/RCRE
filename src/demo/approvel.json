{
    "title": "权限申请",
    "body": [
        {
            "type": "form",
            "model": "form",
            "data": {
                "db_name": "$response.db_name",
                "table_name": "$response.table_name",
                "applicant": "$response.applicant",
                "request_flag": "$response.request_flag",
                "message": "$response.message",
                "count": "$response.count"
            },
            "initialLoad": {
                "url": "http://cp01-ebg-nativeads-50.cp01.baidu.com:8088/udwmeta/userapproval/userapprovalinfo",
                "method": "GET",
                "data": {
                    "db_name": "$query.db_name",
                    "table_name": "$query.table_name",
                    "applicant": "$global.username",
                    "request_flag": "detail"
                }
            },
            "submit": {
                "url": "http://cp01-ebg-nativeads-50.cp01.baidu.com:8088/udwmeta/userapproval/submitapprovalinfo",
                "data": {
                    "db_name": "$data.db_name",
                    "table_name": "$data.table_name",
                    "applicant": "$data.applicant",
                    "reason": "$data.message"
                },
                "method": "GET"
            },
            "controls": [
                {
                    "type": "row",
                    "children": [
                        {
                            "type": "text",
                            "text": "数据库名称",
                            "colSpan": 4
                        },
                        {
                            "type": "text",
                            "text": "$data.db_name",
                            "colSpan": 4
                        }
                    ]
                },
                {
                    "type": "row",
                    "children": [
                        {
                            "type": "text",
                            "text": "表名称",
                            "colSpan": 4
                        },
                        {
                            "type": "text",
                            "text": "$data.table_name",
                            "colSpan": 4
                        }
                    ]
                },
                {
                    "type": "row",
                    "children": [
                        {
                            "type": "text",
                            "text": "申请原因",
                            "style": {
                                "fontSize": 20,
                                "fontWeight": "bold"
                            }
                        }
                    ]
                },
                {
                    "type": "row",
                    "children": [
                        {
                            "type": "input",
                            "name": "message",
                            "colSpan": 10,
                            "displayDisabledText": true
                        }
                    ]
                },
                {
                    "type": "row",
                    "children": [
                        {
                            "type": "button",
                            "htmlType": "submit",
                            "disabled": "$data.count != 0",
                            "text": "提交"
                        }
                    ]
                }
            ]
        }
    ]
}