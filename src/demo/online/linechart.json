{
    "title": "数据监控",
    "theme": "antd",
    "body": [
        {
            "type": "layout",
            "style": {
                "flexDirection": "row"
            },
            "children": [
                {
                    "type": "sider",
                    "width": 250,
                    "style": {
                        "background": "#fff",
                        "borderRight": "2px solid #a4b19b"
                    },
                    "children": [
                        {
                            "type": "tree",
                            "colSpan": 8,
                            "model": "tree",
                            "checkable": false,
                            "data": {
                                "tree": "$response.data.tree",
                                "show": "Object.keys($response.data.show)"
                            },
                            "trigger": [
                                {
                                    "eventType": "treeCheck",
                                    "target": "linechart",
                                    "ship": {
                                        "treeId": "$event.value"
                                    }
                                }
                            ],
                            "initialLoad": {
                                "url": "http://cp01-ebg-nativeads-50.cp01.baidu.com:8088/tree/tree/tree",
                                "method": "GET",
                                "data": {
                                    "root": "1"
                                }
                            },
                            "children": "$data.tree"
                        }
                    ]
                },
                {
                    "type": "container",
                    "model": "linechart",
                    "style": {
                        "marginLeft": 20
                    },
                    "initialLoad": {
                        "url": "http://cp01-ebg-nativeads-50.cp01.baidu.com:8088/realtime/product/chart",
                        "method": "GET",
                        "data": {
                            "date": "$data.date",
                            "fields": "$data.fields",
                            "treeId": "$data.treeId[0]"
                        }
                    },
                    "$nowFormat": "YYYYMMDD",
                    "data": {
                        "treeId": "1",
                        "fields": "click",
                        "date": "$now",
                        "category": "$response.data.categories",
                        "series": "$response.data.series"
                    },
                    "children": [
                        {
                            "type": "row",
                            "children": [
                                {
                                    "type": "text",
                                    "text": "筛选",
                                    "style": {
                                        "display": "inline-block",
                                        "fontSize": 12,
                                        "height": 20,
                                        "lineHeight": "20px",
                                        "color": "#fff",
                                        "backgroundColor": "#ac193d"
                                    },
                                    "colSpan": 3
                                },
                                {
                                    "type": "select",
                                    "childModel": "fields",
                                    "colSpan": 6,
                                    "options": [
                                        {
                                            "key": "pv",
                                            "value": "pv"
                                        },
                                        {
                                            "key": "epv",
                                            "value": "epv"
                                        },
                                        {
                                            "key": "shows",
                                            "value": "shows"
                                        },
                                        {
                                            "key": "epv_win",
                                            "value": "epv_win"
                                        },
                                        {
                                            "key": "shows_win",
                                            "value": "shows_win"
                                        },
                                        {
                                            "key": "eshow",
                                            "value": "eshow"
                                        },
                                        {
                                            "key": "click",
                                            "value": "click"
                                        },
                                        {
                                            "key": "charge",
                                            "value": "charge"
                                        },
                                        {
                                            "key": "bid",
                                            "value": "bid"
                                        }
                                    ]
                                },
                                {
                                    "type": "datepicker",
                                    "childModel": "date",
                                    "startTime": "now",
                                    "format": "YYYYMMDD",
                                    "colSpan": 6
                                }      
                            ]
                        },
                        {
                            "type": "row",
                            "children": [
                                {
                                    "type": "rcre.lineChart",
                                    "model": "linechart",
                                    "colSpan": 8,
                                    "categories": "$parent.category",
                                    "series": "$parent.series",
                                    "width": 800,
                                    "height": 500
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}