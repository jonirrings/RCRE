{
    "title": "树组件实例",
    "body": [
        {
            "type": "layout",
            "style": {
                "flexDirection": "row"
            },
            "children": [
                {
                    "type": "sider",
                    "width": 300,
                    "style": {
                        "background": "#fff"
                    },
                    "children": [
                        {
                            "type": "tree",
                            "colSpan": 8,
                            "model": "tree",
                            "checkable": false,
                            "data": {
                                "tree": "$response.data.tree",
                                "show": "Object.keys($response.data.show)"
                            },
                            "trigger": [
                                {
                                    "eventType": "treeCheck",
                                    "target": "form",
                                    "ship": {
                                        "treeId": "$event.value"
                                    }
                                }
                            ],
                            "initialLoad": {
                                "url": "http://localhost:8800/tree/tree/tree",
                                "method": "GET",
                                "data": {
                                    "root": "1"
                                }
                            },
                            "children": "$data.tree"
                        }
                    ]
                },
                {
                    "type": "content",
                    "children": [
                        {
                            "type": "form",
                            "model": "form",
                            "data": {
                                "treeId": [],
                                "node_name": "$response.data[0].node_name",
                                "node_type": "$response.data[0].node_type",
                                "rule": "$response.data[0].rule",
                                "remark": "$response.data[0].remark",
                                "parent": "$response.data[0].parent"
                            },
                            "submit": {
                                "url": "http://localhost:8800/tree/tree/add",
                                "data": {
                                    "parent": "$data.treeId[0]",
                                    "node_name": "$data.node_name",
                                    "node_type": "$data.node_type",
                                    "rule": "$data.rule",
                                    "remark": "$data.remark"
                                },
                                "method": "GET"
                            },
                            "trigger": [
                                {
                                    "eventType": "submitSuccess"
                                },
                                {
                                    "eventType": "submitFailed"
                                }
                            ],
                            "controls": [
                                {
                                    "type": "input",
                                    "label": "节点名称",
                                    "required": true,
                                    "name": "node_name"
                                },
                                {
                                    "type": "select",
                                    "label": "节点类型",
                                    "required": true,
                                    "name": "node_type",
                                    "options": [
                                        {
                                            "key": "物理节点",
                                            "value": "1"
                                        },
                                        {
                                            "key": "虚拟节点",
                                            "value": "2"
                                        }
                                    ]
                                },
                                {
                                    "type": "input",
                                    "label": "统计规则",
                                    "disabled": "$data.node_type != 1",
                                    "name": "rule",
                                    "required": "$data.node_type == 1"
                                },
                                {
                                    "type": "input",
                                    "size": "large",
                                    "label": "备注",
                                    "name": "remark"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}