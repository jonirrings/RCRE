{
    "body": [
        {
            "type": "container",
            "model": "demo",
            "data": {
                "name": "andycall",
                "age": "#ES{$data.name} + ' and andylaw'"
            },
            "dataCustomer": {
                "customers": [
                    {
                        "mode": "pass",
                        "name": "passCustomer",
                        "config": {
                            "model": "demo",
                            "assign": {
                                "name": "#ES{$params[3]}"
                            }
                        }
                    },
                    {
                        "mode": "submit",
                        "name": "submitCustomer",
                        "config": {
                            "url": "http://baidu.com",
                            "method": "POST",
                            "data": {
                                "name": "#ES{$params[2]}"
                            }
                        }
                    }
                ],
                "groups": [
                    {
                        "name": "group1",
                        "steps": [
                            "passCustomer",
                            "submitCustomer"
                        ]
                    }
                ]
            },
            "children": [
                {
                    "type": "text",
                    "text": "#ES{$data.name}"
                },
                {
                    "type": "text",
                    "text": "#ES{$data.age}"
                },
                {
                    "type": "button",
                    "text": "click",
                    "trigger": [
                        {
                            "event": "onClick",
                            "debug": true,
                            "targetCustomer": "passCustomer",
                            "params": [
                                "2",
                                "#ES{$data.name}"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}